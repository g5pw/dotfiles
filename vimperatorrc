set editor="/opt/local/bin/mvim -f"
set hintchars=hjklasdfgyuiopqwertnmzxcvb

set gui=none
set statuslinevisibility=visible

" Mappings
nmap gn <C-S-n>
nmap gN <C-S-p>

nmap gp :tabgroups pushtab 
nmap gP :tabgroups pulltab 

nmap e :javascript TabView.toggle()<CR>
nmap E :tabgroups switch 
nmap <silent> ge :echo TabGroup().tabView.GroupItems.getActiveGroupItem().getTitle()<CR>
nmap <C-A-n> <C-S-n>
nmap <C-A-p> <C-S-p>

nmap ,/ :nohlsearch<CR>

nmap ,t :tabopen! 

nmap <c-l> :reload<CR>

colorscheme zenburn
" vim: set ft=vimperator:
